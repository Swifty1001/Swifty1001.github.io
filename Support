  <script>
    // ✅ CHANGE THESE:
    const GITHUB_OWNER = "Swifty1001";
    const GITHUB_REPO  = "Swifty1001.github.io";
    // Optional: add a label to help you triage, e.g. "support"
    const DEFAULT_LABELS = ["support"]; // you can leave empty []

    const issuesUrl = `https://github.com/${GITHUB_OWNER}/${GITHUB_REPO}/issues`;
    const newIssueUrl = `https://github.com/${GITHUB_OWNER}/${GITHUB_REPO}/issues/new`;

    document.getElementById("issuesLink").href = issuesUrl;

    const statusEl = document.getElementById("status");
    const showStatus = (msg) => {
      statusEl.textContent = msg;
      statusEl.style.display = "block";
      setTimeout(() => statusEl.style.display = "none", 5000);
    };

    const buildIssue = ({ name, email, type, version, subject, message }) => {
      const title = `[${type}] ${subject}`.trim();

      const bodyLines = [
        `**Name:** ${name || "—"}`,
        `**Email:** ${email || "—"}`,
        `**Type:** ${type || "—"}`,
        `**App Version:** ${version || "—"}`,
        ``,
        `---`,
        ``,
        message || "—"
      ];

      const params = new URLSearchParams();
      params.set("title", title);
      params.set("body", bodyLines.join("\n"));
      if (DEFAULT_LABELS.length) params.set("labels", DEFAULT_LABELS.join(","));

      return `${newIssueUrl}?${params.toString()}`;
    };

    document.getElementById("form").addEventListener("submit", (e) => {
      e.preventDefault();

      const data = {
        name:    document.getElementById("name").value.trim(),
        email:   document.getElementById("email").value.trim(),
        type:    document.getElementById("type").value,
        version: document.getElementById("version").value.trim(),
        subject: document.getElementById("subject").value.trim(),
        message: document.getElementById("message").value.trim(),
      };

      const url = buildIssue(data);

      // Opens GitHub "New Issue" page with pre-filled content
      window.open(url, "_blank", "noopener,noreferrer");
      showStatus("Opened GitHub to create your support ticket. Click “Submit new issue” to finish.");
    });

    document.getElementById("copyBtn").addEventListener("click", async () => {
      const subject = document.getElementById("subject").value.trim();
      const message = document.getElementById("message").value.trim();
      const payload = `Subject: ${subject}\n\n${message}`;

      try {
        await navigator.clipboard.writeText(payload);
        showStatus("Copied to clipboard.");
      } catch {
        showStatus("Could not access clipboard. You can manually select and copy.");
      }
    });
  </script>
</body>
